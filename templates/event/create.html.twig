{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Ajouter{% endblock %}

{% block body %}

    <h2 class="text-center text-2xl font-semibold my-8 text-black">Créer un événement</h2>

    <section class="max-w-[800px] mx-auto">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="flex justify-center">
