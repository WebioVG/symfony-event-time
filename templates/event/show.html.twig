{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Détails{% endblock %}

{% block body %}

    <h2 class="text-center text-2xl font-semibold my-8 text-black">Détails de l'événement <span class="font-semibold">{{ event.name }}</span></h2>

    <section class="max-w-[800px] mx-auto p-4 drop-shadow-lg border rounded">
        <h3 class="text-center font-semibold text-2xl mb-8 mt-3">{{ event.name }}</h3>
        {% if event.image != '' %}
            <img class="w-full object-cover my-3" src="{{ event.image }}">
        {% endif %}
        <article class="border-b mb-3">
            <h5 class="font-semibold mb-1">Description</h5>
            <p class="mb-3 text-justify pl-2">{{ event.description }}</p>
        </article>
        <article class="border-b mb-3">
            <h5 class="font-semibold mb-1">Date de début</h5>
            <p class="mb-3 text-justify pl-2">
                {{ event.releasedAt|date('d/m/Y') }} à {{ event.releasedAt|date('h') }}h{{ event.releasedAt|date('m') }}
            </p>
        </article>
        <article class="border-b mb-3">
            <h5 class="font-semibold mb-1">Date de fin</h5>
            <p class="mb-3 text-justify pl-2">
                {{ event.finishedAt|date('d/m/Y') }} à {{ event.finishedAt|date('h') }}h{{ event.finishedAt|date('m') }}
            </p>
        </article>
        <article class="border-b mb-3">
            <h5 class="font-semibold mb-1">Evénement créé le</h5>
            <p class="mb-3 text-justify pl-2">
                {{ event.createdAt|date('d/m/Y') }} à {{ event.createdAt|date('h') }}h{{ event.createdAt|date('m') }}
            </p>
        </article>
        <article class="flex justify-center">
            <a class="bg-blue-500 text-white px-2 py-1 duration-500 rounded hover:bg-blue-600" href="{{ path('join', { id: event.id }) }}">Rejoindre l'événèment</a>
        </article>
    </section>
    
{% endblock %}